<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:controller="org.main.recipeapp.AddRecipeController"
      prefWidth="500.0" spacing="20.0"
      style="-fx-background-color: #1E1E2C;"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">

    <padding><Insets bottom="30.0" left="30.0" right="30.0" top="30.0" /></padding>

    <VBox spacing="2.0">
        <Label text="Nowy Przepis" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" />
        <Label text="Uzupełnij szczegóły i ilości, aby dodać danie do bazy." style="-fx-text-fill: #6c6c80; -fx-font-size: 12px;" />
    </VBox>

    <Separator opacity="0.1" />

    <VBox spacing="15.0" VBox.vgrow="ALWAYS">

        <VBox spacing="5.0">
            <Label text="NAZWA" style="-fx-text-fill: #BB86FC; -fx-font-size: 10px; -fx-font-weight: bold;" />
            <TextField fx:id="titleField" promptText="np. Domowa Pizza"
                       style="-fx-background-color: #2D2D44; -fx-text-fill: white; -fx-prompt-text-fill: #555570; -fx-background-radius: 5; -fx-padding: 10;" />
        </VBox>

        <VBox spacing="5.0" VBox.vgrow="ALWAYS">
            <Label text="INSTRUKCJA" style="-fx-text-fill: #BB86FC; -fx-font-size: 10px; -fx-font-weight: bold;" />
            <TextArea fx:id="descField" promptText="Opisz krok po kroku jak przygotować danie..." wrapText="true" VBox.vgrow="ALWAYS"
                      style="-fx-control-inner-background: #2D2D44; -fx-background-color: #2D2D44; -fx-text-fill: white; -fx-prompt-text-fill: #555570; -fx-background-radius: 5;" />
        </VBox>

        <VBox spacing="8.0">
            <Label text="SKŁADNIKI" style="-fx-text-fill: #BB86FC; -fx-font-size: 10px; -fx-font-weight: bold;" />

            <HBox spacing="10.0">
                <ComboBox fx:id="ingredientInput" promptText="Wybierz składnik..." HBox.hgrow="ALWAYS" maxWidth="Infinity"
                          style="-fx-background-color: #2D2D44; -fx-mark-color: #BB86FC; -fx-text-base-color: white; -fx-background-radius: 5; -fx-font-size: 13px;" />

                <TextField fx:id="quantityInput" promptText="Ilość (np. 200g)" prefWidth="130.0"
                           style="-fx-background-color: #2D2D44; -fx-text-fill: white; -fx-prompt-text-fill: #555570; -fx-background-radius: 5; -fx-padding: 10;" />

                <Button onAction="#onAddIngredientToList" text="+"
                        style="-fx-background-color: #3E3E55; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand; -fx-min-width: 40;" />
            </HBox>

            <ListView fx:id="ingredientsListView" prefHeight="120.0"
                      style="-fx-background-color: transparent; -fx-control-inner-background: #252538; -fx-background-insets: 0; -fx-background-radius: 5;" />

            <Label text="* Kliknij dwukrotnie na składnik, aby go usunąć z listy." style="-fx-text-fill: #555570; -fx-font-size: 10px;" />
        </VBox>
    </VBox>

    <Button onAction="#onSaveRecipe" text="Zapisz Przepis" maxWidth="Infinity"
            style="-fx-background-color: linear-gradient(to right, #8E44AD, #9B59B6); -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-weight: bold; -fx-padding: 12;" />

</VBox>