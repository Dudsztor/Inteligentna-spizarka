<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox style="-fx-background-color: #1E1E2C;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.main.recipeapp.controllers.MainController">

    <HBox alignment="CENTER_LEFT" prefHeight="80.0" style="-fx-background-color: #252538; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 5);">
        <padding><Insets left="30.0" right="30.0" /></padding>
        <VBox alignment="CENTER_LEFT">
            <Label text="Inteligentna Spiżarnia" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 22px;" />
            <Label text="Zarządzaj swoimi zapasami i przepisami" style="-fx-text-fill: #A0A0B8; -fx-font-size: 12px;" />
        </VBox>
        <Pane HBox.hgrow="ALWAYS" />
        <Button onAction="#onAddRecipeClick" style="-fx-background-color: linear-gradient(to right, #8E44AD, #A569BD); -fx-text-fill: white; -fx-background-radius: 12; -fx-cursor: hand;" text="Dodaj przepis">
            <font><Font name="System Bold" size="14.0" /></font>
            <padding><Insets bottom="10.0" left="25.0" right="25.0" top="10.0" /></padding>
        </Button>
    </HBox>

    <HBox spacing="20.0" VBox.vgrow="ALWAYS">
        <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>

        <VBox minWidth="280.0" style="-fx-background-color: #2D2D44; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 15, 0, 0, 0);">

            <VBox spacing="8.0">
                <HBox spacing="5.0">
                    <ComboBox fx:id="pantryInput" promptText="Wpisz nazwę..." HBox.hgrow="ALWAYS" editable="true"
                              style="-fx-background-color: #1E1E2C; -fx-control-inner-background: #1E1E2C; -fx-text-base-color: white; -fx-prompt-text-fill: gray;" />

                    <TextField fx:id="quantityInput" promptText="Ile? (np. 5)" prefWidth="90.0"
                               style="-fx-background-color: #1E1E2C; -fx-text-fill: white; -fx-prompt-text-fill: gray; -fx-background-radius: 5;"/>
                </HBox>

                <Button text="Dodaj do spiżarni" onAction="#onAddPantryItem" maxWidth="Infinity"
                        style="-fx-background-color: #BB86FC; -fx-text-fill: #1E1E2C; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;"/>
                <VBox.margin><Insets top="10.0" bottom="10.0" /></VBox.margin>
            </VBox>

            <Separator opacity="0.1" style="-fx-padding: 0 0 10 0;" />

            <Label text="TWOJE SKŁADNIKI" style="-fx-padding: 0 0 10 0; -fx-text-fill: #BB86FC; -fx-font-weight: bold; -fx-font-size: 12px; -fx-letter-spacing: 1.5;" />
            <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>

            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;" VBox.vgrow="ALWAYS">
                <VBox fx:id="pantryContainer" spacing="8.0" />
            </ScrollPane>
        </VBox>

        <VBox HBox.hgrow="ALWAYS" style="-fx-background-color: #2D2D44; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 15, 0, 0, 0);">
            <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>

            <Label text="CO MOGĘ UGOTOWAĆ?" style="-fx-text-fill: #CF6679; -fx-font-weight: bold; -fx-font-size: 14px; -fx-letter-spacing: 1.5;" />
            <Label text="Dania możliwe do zrobienia z Twoich zapasów" style="-fx-text-fill: #A0A0B8; -fx-font-size: 11px;" />

            <Separator opacity="0.1" style="-fx-padding: 15 0 15 0;" />

            <ListView fx:id="smartRecipeList" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-control-inner-background: #1E1E2C;" />

        </VBox>

        <VBox minWidth="300.0" maxWidth="350.0" style="-fx-background-color: #2D2D44; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 15, 0, 0, 0);">
            <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>

            <Label text="WSZYSTKIE PRZEPISY" style="-fx-text-fill: #03DAC6; -fx-font-weight: bold; -fx-font-size: 12px; -fx-letter-spacing: 1.5;" />

            <TextField fx:id="searchField" promptText="Szukaj w bazie..."
                       style="-fx-background-color: #1E1E2C; -fx-text-fill: white; -fx-prompt-text-fill: #6c6c80; -fx-background-radius: 10; -fx-padding: 10;">
                <VBox.margin><Insets top="10.0" bottom="10.0" /></VBox.margin>
            </TextField>

            <ListView fx:id="allRecipesList" VBox.vgrow="ALWAYS"
                      style="-fx-background-color: transparent; -fx-control-inner-background: #1E1E2C; -fx-background-insets: 0;" />

            <Button text="Usuń zaznaczony" onAction="#onDeleteRecipeClick"
                    maxWidth="Infinity"
                    style="-fx-background-color: #CF6679; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand; -fx-margin: 10 0 0 0;">
                <VBox.margin><Insets top="15.0" /></VBox.margin>
            </Button>

        </VBox>


    </HBox>
</VBox>